<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ConfirmOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightblue">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Confirm Order Details"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="20sp"
            android:fontFamily="@font/robotoslabregular"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray3"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deliveryAddress"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoslabregular"
                    android:textStyle="normal"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:gravity="start|center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/confirm_address_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/gray5"
                >

                <TextView
                    android:id="@+id/tv_confirm_address_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/robotoslabregular"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:layout_marginStart="4dp"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/gray2"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray3"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoslabregular"
                    android:textStyle="normal"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:gravity="start|center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginStart="8dp"
                    android:buttonTint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Now"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_marginStart="-8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginStart="8dp"
                    android:buttonTint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash on Delivery"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:layout_marginStart="-8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray3"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add notes for delivery"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoslabregular"
                    android:textStyle="normal"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:gravity="start|center" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ex:- Cut chicken pieces medium size "
                    android:textColorHint="@color/gray2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:textAlignment="textStart"
                    android:layout_marginStart="15dp"
                    android:textSize="18sp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray3"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order items"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoslabregular"
                    android:textStyle="normal"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:gravity="start|center" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/recycle_view_confirm_order"
                android:background="@color/gray3" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Item Total"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="12dp"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:textColor="@color/gray1"/>

                    <TextView
                        android:id="@+id/tv_item_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:layout_weight="1"
                        android:text="Rs 1000"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        android:textAlignment="textEnd"
                        android:textStyle="normal"
                        android:textColor="@color/gray1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Delivery Charges"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="12dp"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:textColor="@color/gray1"/>

                    <TextView
                        android:id="@+id/tv_delivery_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:layout_weight="1"
                        android:text="Rs 20"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        android:textAlignment="textEnd"
                        android:textStyle="normal"
                        android:textColor="@color/gray1"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="Grand Total"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="12dp"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:fontFamily="@font/robotoslabregular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_grand_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:layout_weight="1"
                        android:text="Rs 1020"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        android:textAlignment="textEnd"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="4dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_place_order_grand_total_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rs 1200"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/robotoslabmedium"
                android:gravity="start|center"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:id="@+id/tv_place_order_total_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4 Items"
                android:textSize="15sp"
                android:textColor="@color/gray1"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabmedium"
                android:gravity="start|center"
                android:textAlignment="textStart"
                android:layout_marginStart="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_place_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:textSize="20sp"
                android:gravity="center"
                android:backgroundTint="@color/darkblue"
                android:textColor="@color/white"
                android:onClick="placeOrder"
                />

        </LinearLayout>




    </LinearLayout>






</LinearLayout>