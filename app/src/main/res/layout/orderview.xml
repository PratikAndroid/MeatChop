<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/confirmed_order_image"
            android:layout_width="130dp"
            android:padding="2dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/boneless"
            android:layout_marginLeft="10dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/confirmed_order_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Curry Cuts "
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabregular"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/confirmed_order_final_wt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1000gms"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/confirmed_order_product_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Farm "
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textAlignment="textStart"
                    android:textStyle="normal"
                    android:fontFamily="@font/robotoslabregular"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/confirmed_order_product_final_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rs 120 "
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabregular"
                android:textColor="@color/darkblue"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/tv_delivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivered"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textColor="@color/green"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_delivered_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="16/07/2021 "
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textAlignment="textStart"
                    android:textStyle="normal"
                    android:fontFamily="@font/robotoslabregular"
                    android:textColor="@color/green"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>