<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/cartitemview_image"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:src="@drawable/boneless"
        android:layout_marginLeft="10dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cartitemview_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center"
            android:gravity="start|center"
            android:textAlignment="textStart"
            android:textStyle="normal"
            android:fontFamily="@font/robotoslabregular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">



            <TextView
                android:id="@+id/cartitemview_product_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabregular"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/cartitemview_product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabregular"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/cartitemview_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabregular"
                android:textColor="@color/darkblue"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:id="@+id/cartitemview_product_final_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:layout_gravity="center"
                android:gravity="end|center"
                android:textAlignment="textEnd"
                android:textStyle="normal"
                android:fontFamily="@font/robotoslabregular"
                android:textColor="@color/darkblue"
                android:textSize="15sp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="3dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">



            <ImageView
                android:id="@+id/cartitemview_subtract_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/subtract3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="7dp"

                />

            <TextView
                android:id="@+id/cartitemview_finalWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="3dp"
                android:textSize="15sp"
                android:layout_marginTop="-2dp"
                />


            <ImageView
                android:id="@+id/cartitemview_add_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/addicon3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/cartitemview_delete_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_gravity="end"
                android:gravity="end" />



        </LinearLayout>






    </LinearLayout>




</LinearLayout>